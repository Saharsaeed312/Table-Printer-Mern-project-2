<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Table Printer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body class="container mt-5">
    <h2 class="mb-4">Multiplication Table Printer</h2>
    
    <form action="/" method="POST">
      <div class="mb-3">
        <label for="number" class="form-label">Enter a Number</label>
        <input type="number" class="form-control" name="number" id="number" required>
      </div>
      <button type="submit" class="btn btn-primary">Print Table</button>
    </form>

    <% if (table) { %>
      <h4 class="mt-4">Table of <%= number %></h4>
      <ul class="list-group mt-2">
        <% table.forEach(line => { %>
          <li class="list-group-item"><%= line %></li>
        <% }) %>
      </ul>
    <% } %>
  </body>
</html>
